{
    "compilerOptions": {
        "module": "ESNext",
        "declaration": true,
        "sourceMap": false,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "strictNullChecks": true,
        "outDir": "./build",
        "rootDir": ".",
        "baseUrl": "./src",
        "paths": {
            "@/*": ["*"]
        }
    },

    "include": ["./src/**/*", "App.tsx", "App.js"],
    "exclude": ["node_modules", "build"],

    "extends": "expo/tsconfig.base"
}
